<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quelle combinaison de couleurs préférez-vous?"
        android:id="@+id/textView"
        android:layout_weight="0.54"
        android:textSize="40dp"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combinaison 1"
        android:id="@+id/button1"
        android:layout_weight="0.08"
        android:textSize="30dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combinaison 2"
        android:id="@+id/button2"
        android:layout_weight="0.08"
        android:textSize="30dp"
        android:textColor="#000000"
        android:background="#f8e131"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combinaison 3"
        android:id="@+id/button3"
        android:layout_weight="0.08"
        android:textSize="30dp"
        android:background="#e10202"
        android:textColor="#ffffff"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combinaison 4"
        android:id="@+id/button4"
        android:layout_weight="0.08"
        android:textSize="30dp"
        android:textColor="#030303"
        android:background="#fffffc"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combinaison 5"
        android:id="@+id/button5"
        android:layout_weight="0.08"
        android:textSize="30dp"
        android:textColor="#f30606"
        android:background="#f7e627"
        android:layout_marginBottom="15dp" />
</LinearLayout>
